                        android:id="@+id/player16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sixteen"/>
                <RadioButton
                        android:id="@+id/player17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seventeen"/>
                <RadioButton
                        android:id="@+id/player18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/eighteen"/>
                <RadioButton
                        android:id="@+id/player19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nineteen"/>
                <RadioButton
                        android:id="@+id/player20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twenty"/>

            </RadioGroup>

        </LinearLayout>
    </ScrollView>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:id="@+id/select"
            android:layout_alignParentBottom="true"/>

</LinearLayout>